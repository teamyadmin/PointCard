<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

    <Button
            android:text="@string/qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/QRButton" android:layout_marginEnd="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>

    <LinearLayout
            android:id="@+id/linear"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="400dp"
            android:layout_width="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginTop="30dp"/>
</android.support.constraint.ConstraintLayout>