<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

    <TextView
            android:text="@string/point"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/PointLabel" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <Button
            android:text="@string/qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/QRButton" android:layout_marginEnd="42dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/PointLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/point" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/PointLabel" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</android.support.constraint.ConstraintLayout>